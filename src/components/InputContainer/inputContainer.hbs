<div>
  <div class="{{styles.input-field-wrapper}}">

    <div class="{{styles.input-field-tooltip}}">{{{input}}}</div>

    <span
      class="{{styles.input-field-focus}}"
      data-placeholder="{{text}}"
    ></span>

    <span
      class="{{styles.input-field-error-message}}"
      name="{{name}}ErrMessage"
    ></span>

    <span
      class="{{styles.input-field-tooltiptext}}"
      name="{{name}}ErrTooltip"
    ></span>

  </div>
</div>
