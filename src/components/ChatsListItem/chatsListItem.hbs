<li class="{{styles.menu-list-li}} {{#if isActive}}{{styles.chat-active}}{{/if}}">
  <a href="#" class="{{styles.menu-item}}">
    <table class="{{styles.width-100}}">
      <tr>
        <td
          rowspan="2"
          class="{{styles.text-align-center}} {{styles.width-45}}"
        >
          <img
		  src="{{img}}"
		  	{{#if avatar}}
            src="{{avatar}}"
			{{/if}}
            alt="Avatar"
            class="{{styles.chat-avatar-img}}"
          />

        </td>
        <td class="{{styles.chat-title}}">
          {{chats.title}}
        </td>
        <td
          class="{{styles.chat-message-text}}
            {{styles.text-align-right}}
            {{styles.width-35}}"
        >
          {{time}}
        </td>
      </tr>
      <tr>
        <td class="{{styles.chat-message-text}} {{styles.text-align-left}}">
          {{chats.last_message.content}}
        </td>
        <td>
          {{#if chats.unread_count}}
            <span class="{{styles.chat-badge}}">{{chats.unread_count}}</span>
          {{/if}}
        </td>
      </tr>
    </table>
  </a>
</li>
