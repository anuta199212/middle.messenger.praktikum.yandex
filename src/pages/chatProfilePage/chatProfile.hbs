--- first_name: "Имя пользователя" ---

<main>
  <div class="{{styles.form-panel}}">
    <div class="{{styles.form-panel-wrapper}}">
      <form class="{{styles.form}}">
        <!--TODO-->
        <span class="{{styles.avatar}}">
          <img
            src="/static/image-plus-outline.svg"
            alt="Avatar"
            class="{{styles.avatar-img}}"
          />
        </span>

        <span class="{{styles.form-title}}">
          {{first_name}}
        </span>

        <div>
          {{{inputFName}}}
          {{{inputLogin}}}
          {{{inputPhone}}}
        </div>

        <div class="{{styles.text-left}} {{styles.p-t-15}}">
          <a class="{{styles.text-primary}}" href="/src/layouts/chat/clear.hbs">
            Очистить историю
          </a>
        </div>
        <div class="{{styles.text-left}} {{styles.p-t-15}}">
          <a class="{{styles.text-danger}}" href="/src/layouts/chat/delete.hbs">
            Удалить чат
          </a>
        </div>

      </form>
    </div>
  </div>
</main>
